<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @person.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @person.last_name %>
</p>

<p>
  <strong><%= @person.first_name %>'s phone numbers:</strong>
  <ol>
    <% @person.phone_numbers.each do |p_n| %>
      <li><%= p_n.number %> <%= link_to "Edit", edit_phone_number_path(p_n) %></li>
    <% end %>
  </ol>
</p>

<%= link_to 'New', new_phone_number_path(person_id: @person.id) %> |
<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
